@model EditBookVm
@{
    ViewData["title"] = "Edit Book";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        CMS
                    </div>
                    <h2 class="page-title">
                        Dashboard
                    </h2>
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <span class="d-none d-sm-inline">
                            <a asp-action="Index" class="btn">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left"
                                     width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                     fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <path d="M5 12l14 0"></path>
                                    <path d="M5 12l6 6"></path>
                                    <path d="M5 12l6 -6"></path>
                                </svg>
                                Go Back
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="col-md-12">
                <form class="card" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id">
                    <div class="card-header">
                        <h3 class="card-title">Edit Book</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label required" asp-for="Name">Name</label>
                                    <div>
                                        <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label required" asp-for="Name">Short Description</label>
                                    <div>
                                        <input type="text" class="form-control" placeholder="Short Description" asp-for="ShortDescription">
                                        <span class="text-danger" asp-validation-for="ShortDescription"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label required" asp-for="Name">Price</label>
                                    <div>
                                        <input type="text" class="form-control" placeholder="Price" asp-for="Price">
                                        <span class="text-danger" asp-validation-for="Price"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label required" asp-for="Name">Quantity</label>
                                    <div>
                                        <input type="text" class="form-control" placeholder="Price" asp-for="Quantity">
                                        <span class="text-danger" asp-validation-for="Quantity"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label required" asp-for="CategoryIds">Category</label>
                                    <div>
                                        <select asp-items="@Model.CategoriesSelectList" asp-for="CategoryIds"
                                                class="form-select select2" multiple="multiple">
                                        </select>
                                        <span class="text-danger" asp-validation-for="CategoryIds"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Description">Description</label>
                                    <div>
                                        <textarea rows="8" class="form-control" placeholder="Description"
                                                                    asp-for="Description"></textarea>
                                        <span class="form-hint" asp-validation-for="Description"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}