@model ChangePasswordVm
@{
    ViewData["title"] = "Change Password";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        CMS
                    </div>
                    <h2 class="page-title">
                        Dashboard
                    </h2>
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <span class="d-none d-sm-inline">
                            <a asp-action="Index" class="btn">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left"
                                    width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                    fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <path d="M5 12l14 0"></path>
                                    <path d="M5 12l6 6"></path>
                                    <path d="M5 12l6 -6"></path>
                                </svg>
                                Go Back
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="col-md-12">
                <form class="card" asp-action="ChangePassword">
                    <div class="card-header">
                        <h3 class="card-title">Change Password</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="mb-3 col-sm-12 col-md-4">
                                <label class="form-label required" asp-for="OldPassword">Old Password</label>
                                <div>
                                    <input type="password" class="form-control" placeholder="Enter Old Password"
                                        asp-for="OldPassword">
                                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                                </div>
                            </div>
                             <div class="mb-3 col-sm-12 col-md-4">
                                <label class="form-label required" asp-for="NewPassword">New Password</label>
                                <div>
                                    <input type="password" class="form-control" placeholder="Enter New Password"
                                        asp-for="NewPassword">
                                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                                </div>
                            </div>
                            <div class="mb-3 col-sm-12 col-md-4">
                                <label class="form-label required" asp-for="ConfirmPassword">Confirm Password</label>
                                <div>
                                    <input type="password" class="form-control" placeholder="Enter Confirm Password"
                                        asp-for="ConfirmPassword">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}