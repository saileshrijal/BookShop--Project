@model BookShop.ViewModels.BlogVm.BlogIndexVm
<!-- Main wrapper -->
<div class="wrapper" id="wrapper">
    
    <!-- Start breadcrumb area -->
    <div class="ht__breadcrumb__area bg-image--6">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__inner text-center">
                        <h2 class="breadcrumb-title">Blog Details</h2>
                        <nav class="breadcrumb-content">
                            <a class="breadcrumb_item" href="index.html">Home</a>
                            <span class="brd-separator">/</span>
                            <span class="breadcrumb_item active">Blog-Details</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End breadcrumb area -->
    <div class="page-blog-details section-padding--lg bg--white">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="blog-details content">
                        <article class="blog-post-details">
                            @if (!string.IsNullOrWhiteSpace(Model.ThumbnailUrl))
                            {
                                <div class="post-thumbnail">
                                    <img src="/uploads/thumbnails/@Model.ThumbnailUrl" alt="blog images">
                                </div>
                            }
                            <div class="post_wrapper">
                                <div class="post_header">
                                    <h2>@Model.Title</h2>
                                    <div class="blog-date-categori">
                                        <ul>
                                            <li>@Model.CreatedDate</li>
                                            <li><a href="#" title="Posts by @Model.AuthorName" rel="author">@Model.AuthorName</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="post_content">
                                    @Html.Raw(Model.Description)
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //Main wrapper -->